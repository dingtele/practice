/* 数组下标命名规则 */
//占位符%c


#include<stdio.h>
#include<time.h>
#include<stdlib.h>
#include<stdbool.h>

#define NUM_RANKS 13
#define NUM_SUITS 4

int main(void)
{
  int rank, suit, num_cards, 
  bool in_hand[NUM_RANKS][NUM_CARDS]={false};
  const char card_code[rank]={  };
  const char card_code[suit]={  };
  
  printf("Enter numbers of cards in hand:  ")
    scf("%d", &num_cards);
  
  srand((unsigned)time(NULL));
  
  printf("your hand:  ");
  while(num_cards>0){
     rank=rand()% NUM_RANKS;
     suit=rand()% NUM_SUITS;
     if(!in_hand[][]){
       in_hand[][]=true;
       num_cards--;
       printf("%c%c", card_code[rank], card_code[suit]);
     }
  }
  printf("\n");
}
    
  
  
